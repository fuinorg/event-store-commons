<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>org.fuin.esc.jpa.JpaEvent</class>
		<class>org.fuin.esc.jpa.JpaStream</class>
		<class>org.fuin.esc.jpa.JpaProjection</class>
		<class>org.fuin.esc.jpa.JpaData</class>
		<class>org.fuin.esc.test.jpa.AppendSingleAgainStream</class>
		<class>org.fuin.esc.test.jpa.AppendSingleAgainEvent</class>
        <class>org.fuin.esc.test.jpa.AppendMultipleAgainStream</class>
        <class>org.fuin.esc.test.jpa.AppendMultipleAgainEvent</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete1Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete1Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete2Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete2Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete3Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete3Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete4Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterHardDelete4Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete1Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete1Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete2Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete2Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete3Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete3Event</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete4Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteAfterSoftDelete4Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting1Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting1Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting2Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting2Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting3Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting3Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting4Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting4Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting5Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting5Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting6Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting6Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting7Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting7Event</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting8Stream</class>
        <class>org.fuin.esc.test.jpa.DeleteExisting8Event</class>
        <class>org.fuin.esc.test.jpa.ReadAfterHardDeleteStream</class>
        <class>org.fuin.esc.test.jpa.ReadAfterHardDeleteEvent</class>
        <class>org.fuin.esc.test.jpa.ReadAfterSoftDeleteStream</class>
        <class>org.fuin.esc.test.jpa.ReadAfterSoftDeleteEvent</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:unit-testing-jpa"	/> 
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" /> 
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password"	value="" /> 
			<property name="hibernate.connection.useUnicode" value="true" />
			<property name="hibernate.connection.characterEncoding"	value="UTF-8" />

			<!-- Necessary for shutdown of HSQL in tests -->
			<property name="esctest.shutdown" value="true" />
			<property name="esctest.url" value="jdbc:hsqldb:mem:unit-testing-jpa" />
			<property name="esctest.user" value="sa" />
			<property name="esctest.pw" value="" />

		</properties>


	</persistence-unit>

</persistence>
